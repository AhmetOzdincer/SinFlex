<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewBag.Title - SinFlexSinema</title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Bree+Serif" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="shortcut icon" type="image/Favicon-01.jpg" href="~/İmages/Favİcon/Favicon-01.jpg"/>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-default" style="background-color:yellowgreen">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <div class="menu">
                    <ul>
                        <li>
                            <a class="navbar-brand" href="~/Film/Anasayfa">
                                <img src="~/İmages/SinFlex.jpg" align="left" width="120" height="70" />SinFlexSinema
                            </a>
                            </li>
                        <li>
                            <a class="navbar-brand" href="~/Film/Anasayfa" style="margin-top:70px;margin-left:55px;border:solid none">Anasayfa</a>
                            </li>
                        <li>
                            <a class="navbar-brand" href="~/Film/Hakkimizda" style="margin-top:70px;margin-left:50px;border:solid none">Hakkımızda</a>
                        </li>
                        <li>
                            <a class="navbar-brand" href="~/Film/İletisim" style="margin-top:70px;margin-left:65px">İletişim</a>
                        </li>
                    </ul>
                    </div>
                    <div class="collapse navbar-collapse" id="menulist">
                        <ul class="nav navbar-nav navbar-right">
                            @if (Session["LogonUser"] == null)
                            {
                                <li style="margin-left:1170px">
                                    <a href="~/Account/Register">
                                        <span class="glyphicon glyphicon-duplicate"></span>&nbsp;Üye Ol
                                    </a>
                                </li>
                                <li>
                                    <a href="~/Account/Login">
                                        <span class="glyphicon glyphicon-log-in"></span>&nbsp;Giriş
                                    </a>
                                </li>
                            }

                            else
                            {
                                <li class="menu" style="margin-left:950px;margin-right:10px">
                                    <a href="~/Account/Profil">
                                        <span class="glyphicon glyphicon-user"></span>
                                        &nbsp;Hoşgeldiniz @(Session["KullaniciAdi"].ToString())
                                    </a>
                                </li>
                                <li class="menu" style="margin-top:15px;">
                                    <span class="glyphicon glyphicon-cog"></span>&nbsp;Yetki:@(Session["PermissionType"].ToString())
                                </li>

                            }

                            @{
                                List<SinFlexSinema.Models.Film.BasketModels> basket = (List<SinFlexSinema.Models.Film.BasketModels>)Session["Basket"];
                                if (basket == null)
                                {
                                    basket = new List<SinFlexSinema.Models.Film.BasketModels>();
                                }
                             }
                          <li class="dropdown">
                              <a href="#"class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
                                      <span  class="glyphicon glyphicon-shopping-cart"></span>&nbsp; Sepetim
                              <span class="badge">@basket.Count</span>
                              <span class="caret"></span>
                              </a>
                          <ul class="dropdown-menu">
                          @foreach (SinFlexSinema.Models.Film.BasketModels item in basket)
                          {
                         <li><a href="~/Film/Anasayfa/@item.Film.Film_ID">@item.Film.Adi (@item.Count)</a></li>
                          }
                         <li class="divider" role="separator"></li>
                         <li><a href="~/Film/Sepet">Sepete Git</a></li>
                         </ul>
                         </li>
                            @if(Session["LogonUser"]!=null)
                            {
                          <li class="menu">
                                  <a href="~/Account/Logout">


                                      <span class="glyphicon glyphicon-log-out"></span>&nbsp; Çıkış
                                  </a>
                              </li>
                            }
                     </ul>
                   </div>
                 </div><!-- /.navbar-collapse -->
               </div><!-- /.container-fluid -->
           </nav>
                        <div class="container">
                          @RenderBody()
                         </div>
                        <div class="well-sm" style="background-color:lightslategray;height:auto"  >
                        <div class="row">
                        <div class="col-md-4 col-md-offset-4 text-center">
                        <a href="https://www.facebook.com/ahmtozdncr" target="_blank">
                        <span class="fa fa-facebook-square fa-2x"></span>
                        </a>
                        <a href="https://twitter.com/ahmtozdncr" target="_blank">
                        <span class="fa fa-twitter-square fa-2x"></span>
                        </a>
                        <a href="https://www.youtube.com/channel/UCwMr1MReHxh45zb5MxnxFNQ/featured" target="_blank">
                        <span class="fa fa-youtube-square fa-2x text-danger"></span>
                        </a>
                        </div>
                        <div class="col-md-6 col-md-offset-3 text-center">
                        <p>
                         Tüm Hakları Saklıdır.&copy; 2022
                        </p>
                        <p>
                        <a href="mailto:ahmtozdncr@gmail.com" class="btn btn-info btn-sm">E-Posta Gönder</a>
                        </p>
                        </div>
                        </div>
                        </div>
</body>
</html>
